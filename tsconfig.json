{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "allowJs": false,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "lib",
        "declarationDir": "lib",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "resolveJsonModule": true
    },
    "include": ["src"]
}
