        "prettier-plugin-motoko": "^0.1.3"
    },
    "devDependencies": {
        "@types/jest": "^28.1.7",
        "@types/prettier": "^2.7.0",
        "fast-glob": "^3.2.11",
        "jest": "^28.1.3",
        "npm-run-all": "^4.1.5",
        "pkg": "^5.8.0"
    },
    "peerDependencies": {
        "prettier": "^2.7"
    },
    "files": [
        "lib/**/*",
        "wasm/pkg/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dfinity/prettier-plugin-motoko.git"
