{
    "name": "prettier-plugin-motoko",
    "version": "0.0.4",
    "description": "A code formatter for the Motoko smart contract language.",
    "main": "lib/index.js",
    "scripts": {
        "build:typescript": "rm -rf ./lib && tsc -p tsconfig.json",
        "build:wasm": "wasm-pack build wasm --target nodejs",
        "build": "run-s build:wasm build:typescript",
        "test": "npm run build:wasm && jest",
        "test:quick": "jest",
        "prepublish": "npm run build"
    },
    "devDependencies": {
        "@types/jest": "^28.1.7",
        "@types/prettier": "^2.7.0",
        "fast-glob": "^3.2.11",
        "jest": "^28.1.3",
        "npm-run-all": "^4.1.5",
        "ts-jest": "^28.0.8",
        "ts-node": "^10.9.1",
        "typescript": "^4.7.4",
        "wasm-pack": "^0.10.3"
    },
    "peerDependencies": {
        "prettier": "^2"
    },
    "files": [
        "lib/**/*",
        "wasm/pkg/**/*"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dfinity/prettier-plugin-motoko.git"
    },
    "author": "Ryan Vandersmith (https://github.com/rvanasa)",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/dfinity/prettier-plugin-motoko/issues"
    },
    "homepage": "https://github.com/dfinity/prettier-plugin-motoko#readme"
}
